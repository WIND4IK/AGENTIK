<UserControl x:Class="AGENTIK.ChatUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core">
    <UserControl.Resources>
        <DataTemplate x:Key="ListViewItemTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="{Binding Name}" Foreground="#FF2A5EB8" />
                    <TextBlock Text="{Binding Text}"/>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="200" Height="*" />
            <RowDefinition Height="3"/>
            <RowDefinition MinHeight="120" Height="*"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" x:Name="receiveListView" ItemTemplate="{StaticResource ListViewItemTemplate}" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="1"/>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"/>
        <RichTextBox Grid.Row="2" x:Name="sendTextBox" VerticalScrollBarVisibility="Auto" KeyUp="sendTextBox_KeyUp" MinHeight="30" Margin="1" />
    </Grid>
</UserControl>
