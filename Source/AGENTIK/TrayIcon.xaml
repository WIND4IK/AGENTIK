<UserControl x:Class="AGENTIK.TrayIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="trayIcon"
             d:DesignHeight="32"
             d:DesignWidth="32"
             mc:Ignorable="d">
    <UserControl.Background>
        <ImageBrush ImageSource="Icons/NetDrives.ico" />
    </UserControl.Background>
    <Grid Width="24"
          Height="24"
          HorizontalAlignment="Right"
          VerticalAlignment="Bottom"
          Visibility="{Binding ItemCounterVisibility,
                               ElementName=trayIcon}">
        <Ellipse Fill="#FFF95353"
                 Stroke="White"
                 StrokeThickness="2" />

        <TextBlock Height="24"
                   VerticalAlignment="Center"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   Text="{Binding ItemCounter, ElementName=trayIcon}"
                   TextAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
